<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Velez" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">#0063a8</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">#0063a8</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme" parent="Theme.Velez">
        <item name="android:textViewStyle">@style/GothamTextViewStyle</item>
        <item name="android:buttonStyle">@style/GhotamButtonStyle</item>
    </style>

    <style name="GothamTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/gothambook</item>
    </style>

    <style name="GhotamButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/gothambook</item>
    </style>
</resources>